<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tỷ giá ngoại tệ</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PRN222_Assignment4_Option1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="ExchangeRate" asp-action="Index">Tỷ giá ngoại tệ</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @{
                            var action = ViewContext.RouteData.Values["action"]?.ToString();
                            var controller = ViewContext.RouteData.Values["controller"]?.ToString();
                        }
                        <li class="nav-item">
                            <a class="nav-link @(controller == "ExchangeRate" && action == "Index" ? "active fw-bold" : "text-dark")" asp-controller="ExchangeRate" asp-action="Index">Danh sách tỷ giá</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controller == "ExchangeRate" && action == "Latest" ? "active fw-bold" : "text-dark")" asp-controller="ExchangeRate" asp-action="Latest">Tỷ giá mới nhất</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controller == "ExchangeRate" && action == "Statistics" ? "active fw-bold" : "text-dark")" asp-controller="ExchangeRate" asp-action="Statistics">Thống kê</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controller == "ExchangeRate" && action == "ApiFilter" ? "active fw-bold" : "text-dark")" asp-controller="ExchangeRate" asp-action="ApiFilter">Lọc theo API</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Hệ thống theo dõi tỷ giá ngoại tệ
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
