@model ExchangeRate?
@{
    ViewData["Title"] = "Tỷ giá mới nhất";
}

@section Scripts {
    <script>
        // Tự động refresh trang mỗi 10 giây để luôn hiển thị tỷ giá mới nhất.
        setTimeout(function () { location.reload(); }, 10000);
    </script>
}

<h1 class="mb-3">@ViewData["Title"]</h1>
<p class="text-muted mb-4">Bản ghi tỷ giá mới nhất được lưu trong hệ thống. Trang sẽ tự làm mới mỗi 10 giây. <a asp-controller="ExchangeRate" asp-action="Index" class="text-decoration-none">← Xem danh sách tỷ giá</a></p>

@if (Model == null)
{
    <div class="alert alert-warning">
        Chưa có dữ liệu. Hãy chạy ứng dụng (Worker chạy kèm Web) để thu thập tỷ giá từ API.
        <a asp-controller="ExchangeRate" asp-action="Index" class="alert-link">Xem danh sách</a>
    </div>
}
else
{
    <div class="card shadow-sm" style="max-width: 28rem;">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">@Model.BaseCurrency / @Model.TargetCurrency</h5>
        </div>
        <div class="card-body">
            <p class="card-text display-5 mb-2">@Model.Rate.ToString("N2")</p>
            <p class="text-muted small mb-0">Cập nhật: @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</p>
            <a asp-controller="ExchangeRate" asp-action="Index" class="btn btn-outline-primary btn-sm mt-3">Xem danh sách đầy đủ</a>
        </div>
    </div>
}
